{
  "extends": ["config:base", "docker:disable"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "masterIssue": true,
  "baseBranches": ["latest"],
  "packageRules": [
    {
      "baseBranchList": ["latest"],
      "packageNames": ["nexus-plugin-prisma"],
      "enabled": true
    },
    {
      "baseBranchList": ["latest"],
      "packageNames": ["@prisma/cli", "@prisma/client"],
      "enabled": true,
      "updateTypes": ["major"]
    }
  ]
}
