datasource db {
  provider = "postgres"
  // Like, postgresql://user:password@localhost:5432/database/schema
  url      = env("POSTGRESQL_URL")
}

generator photon {
  provider = "photonjs"
}

model Post {
  id        String  @default(cuid()) @id @unique
  published Boolean
  title     String
  content   String?
  author    User?
}

model User {
  id       String  @default(cuid()) @id @unique
  email    String  @unique
  password String
  name     String?
  posts    Post[]
}