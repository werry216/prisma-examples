datasource db {
    provider = "postgresql"
    // Like, postgresql://user:password@localhost:5432/database?schema=public
    url      = env("POSTGRESQL_URL")
}

generator photon {
    provider = "photonjs"
}

model User {
    id    String  @default(cuid()) @id @unique
    email String  @unique
    name  String?
    posts Post[]
}

model Post {
    id        String   @default(cuid()) @id @unique
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    published Boolean
    title     String
    content   String?
    author    User?
}